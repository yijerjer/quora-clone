<h2>Sign up page</h2>
<form method="post" action="/users">
	<input type="text" placeholder="Name" name="user_name"><br>
	<input type="text" placeholder="Email" name="user_email"><br>
	<input type="text" placeholder="Password" name="user_password"><br>
	<input type="text" placeholder="Re-enter Password" name="user_reenter_password"><br>
	<button type="submit" value="submit">Sign Up</button>
</form>

<p>
	<% if @errors != nil %>
		<% @errors.each do |key, error| %>
			<p><%= error %></p>
		<% end %>
	<% end %>
</p>
